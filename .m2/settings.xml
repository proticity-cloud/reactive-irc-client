<settings>
    <servers>
        <server>
            <id>ossrh</id>
            <username>${env.MAVEN_DEPLOY_USERNAME}</username>
            <password>${env.MAVEN_DEPLOY_PASSWORD}</password>
        </server>
    </servers>
    <profiles>
        <profile>
            <id>ossrh</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <gpg.keyname>development@charmedbaryon.tv</gpg.keyname>
                <gpg.passphrase>${env.MAVEN_GPG_PASSWORD}</gpg.passphrase>
            </properties>
            <repositories>
                <repository>
                    <id>ossrh-snapshots</id>
                    <name>Sonatype OSSRH Snapshots</name>
                    <url>https://oss.sonatype.org/content/groups/public</url>
                    <releases>
                        <enabled>false</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                    </snapshots>
                </repository>
            </repositories>
        </profile>
    </profiles>
</settings>